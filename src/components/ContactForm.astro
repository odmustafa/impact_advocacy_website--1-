
---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section class="section-padding">
  <div class="container-width">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
          {currentLang === 'es' ? 'Construyamos Algo' : 'Let\'s Build Something'} 
          <span class="gradient-text">
            {currentLang === 'es' ? 'Que Dure' : 'That Lasts'}
          </span>
        </h2>
        <p class="text-xl text-white/70">
          {currentLang === 'es' 
            ? 'Ponte en contacto con nosotros para comenzar tu viaje hacia el empoderamiento financiero.'
            : 'Get in touch with us to start your journey toward financial empowerment.'
          }
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="glass-card p-8">
          <h3 class="text-2xl font-bold text-white mb-6">
            {currentLang === 'es' ? 'Envía un Mensaje' : 'Send a Message'}
          </h3>
          
          <form class="contact-form space-y-6" action="https://formspree.io/f/mrbzgjvl" method="POST">
            <!-- Name Field -->
            <div>
              <label for="name" class="block text-sm font-medium text-white/80 mb-2">
                {t('contact.name')} *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                placeholder={currentLang === 'es' ? 'Tu nombre completo' : 'Your full name'}
              />
            </div>

            <!-- Email Field -->
            <div>
              <label for="email" class="block text-sm font-medium text-white/80 mb-2">
                {t('contact.email')} *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                placeholder={currentLang === 'es' ? 'tu@correo.com' : 'your@email.com'}
              />
            </div>

            <!-- Phone Field (Optional) -->
            <div>
              <label for="phone" class="block text-sm font-medium text-white/80 mb-2">
                {currentLang === 'es' ? 'Teléfono' : 'Phone'} ({currentLang === 'es' ? 'Opcional' : 'Optional'})
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                placeholder={currentLang === 'es' ? '(555) 123-4567' : '(555) 123-4567'}
              />
            </div>

            <!-- Service Interest -->
            <div>
              <label for="service" class="block text-sm font-medium text-white/80 mb-2">
                {currentLang === 'es' ? 'Servicio de Interés' : 'Service of Interest'}
              </label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
              >
                <option value="" class="bg-dark-100">
                  {currentLang === 'es' ? 'Selecciona un servicio' : 'Select a service'}
                </option>
                <option value="financial-literacy" class="bg-dark-100">
                  {currentLang === 'es' ? 'Educación Financiera' : 'Financial Literacy Training'}
                </option>
                <option value="community-empowerment" class="bg-dark-100">
                  {currentLang === 'es' ? 'Empoderamiento Comunitario' : 'Community Empowerment'}
                </option>
                <option value="strategic-consulting" class="bg-dark-100">
                  {currentLang === 'es' ? 'Consultoría Estratégica' : 'Strategic Consulting'}
                </option>
                <option value="real-estate" class="bg-dark-100">
                  {currentLang === 'es' ? 'Orientación Inmobiliaria' : 'Real Estate Guidance'}
                </option>
                <option value="other" class="bg-dark-100">
                  {currentLang === 'es' ? 'Otro' : 'Other'}
                </option>
              </select>
            </div>

            <!-- Message Field -->
            <div>
              <label for="message" class="block text-sm font-medium text-white/80 mb-2">
                {t('contact.message')} *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 bg-white/5 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300 resize-vertical"
                placeholder={currentLang === 'es' 
                  ? 'Cuéntanos cómo podemos ayudarte...'
                  : 'Tell us how we can help you...'
                }
              ></textarea>
            </div>

            <!-- Hidden Honeypot for Spam Protection -->
            <input type="text" name="_gotcha" style="display:none !important">

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-4 px-6 rounded-lg transition-all duration-300 hover:scale-105 neon-glow focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-dark-200"
            >
              {t('contact.submit')}
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Contact Details -->
          <div class="glass-card p-8">
            <h3 class="text-2xl font-bold text-white mb-6">
              {currentLang === 'es' ? 'Información de Contacto' : 'Contact Information'}
            </h3>
            
            <div class="space-y-6">
              <!-- Email -->
              <div class="flex items-center">
                <div class="p-3 bg-primary-600/20 rounded-lg mr-4">
                  <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-white/70 text-sm">Email</p>
                  <a href="mailto:impactadvocacycorp@gmail.com" class="text-white hover:text-primary-400 transition-colors">
                    impactadvocacycorp@gmail.com
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-center">
                <div class="p-3 bg-secondary-600/20 rounded-lg mr-4">
                  <svg class="w-6 h-6 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-white/70 text-sm">
                    {currentLang === 'es' ? 'Teléfono' : 'Phone'}
                  </p>
                  <a href="tel:+19498270748" class="text-white hover:text-secondary-400 transition-colors">
                    +1 (949) 827-0748
                  </a>
                </div>
              </div>

              <!-- Location -->
              <div class="flex items-center">
                <div class="p-3 bg-accent-600/20 rounded-lg mr-4">
                  <svg class="w-6 h-6 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-white/70 text-sm">
                    {currentLang === 'es' ? 'Ubicación' : 'Location'}
                  </p>
                  <p class="text-white">
                    {currentLang === 'es' 
                      ? 'Área de Dallas-Fort Worth, Texas'
                      : 'Dallas-Fort Worth Area, Texas'
                    }
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Values Card -->
          <div class="glass-card p-8">
            <h3 class="text-2xl font-bold text-white mb-6">
              {currentLang === 'es' ? 'Nuestros Valores' : 'Our Values'}
            </h3>
            
            <div class="space-y-4">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-primary-600 rounded-full mr-3"></div>
                <span class="text-white">
                  <strong class="text-primary-400">Confianza</strong> 
                  {currentLang === 'es' ? ' (Confianza)' : ' (Trust)'}
                </span>
              </div>
              <div class="flex items-center">
                <div class="w-3 h-3 bg-secondary-600 rounded-full mr-3"></div>
                <span class="text-white">
                  <strong class="text-secondary-400">Respeto</strong> 
                  {currentLang === 'es' ? ' (Respeto)' : ' (Respect)'}
                </span>
              </div>
              <div class="flex items-center">
                <div class="w-3 h-3 bg-accent-600 rounded-full mr-3"></div>
                <span class="text-white">
                  <strong class="text-accent-400">Acción</strong> 
                  {currentLang === 'es' ? ' (Acción)' : ' (Action)'}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Form submission handling
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('.contact-form') as HTMLFormElement;
    
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        const originalText = submitButton.textContent;
        
        // Show loading state
        submitButton.disabled = true;
        submitButton.textContent = 'Sending...';
        
        try {
          const response = await fetch(form.action, {
            method: 'POST',
            body: new FormData(form),
            headers: {
              'Accept': 'application/json'
            }
          });
          
          if (response.ok) {
            // Success
            submitButton.textContent = '✓ Sent!';
            submitButton.classList.add('bg-green-600', 'hover:bg-green-700');
            submitButton.classList.remove('bg-primary-600', 'hover:bg-primary-700');
            form.reset();
            
            // Reset button after 3 seconds
            setTimeout(() => {
              submitButton.disabled = false;
              submitButton.textContent = originalText;
              submitButton.classList.remove('bg-green-600', 'hover:bg-green-700');
              submitButton.classList.add('bg-primary-600', 'hover:bg-primary-700');
            }, 3000);
          } else {
            throw new Error('Form submission failed');
          }
        } catch (error) {
          // Error handling
          submitButton.textContent = '✗ Error - Try Again';
          submitButton.classList.add('bg-red-600', 'hover:bg-red-700');
          submitButton.classList.remove('bg-primary-600', 'hover:bg-primary-700');
          
          setTimeout(() => {
            submitButton.disabled = false;
            submitButton.textContent = originalText;
            submitButton.classList.remove('bg-red-600', 'hover:bg-red-700');
            submitButton.classList.add('bg-primary-600', 'hover:bg-primary-700');
          }, 3000);
        }
      });
    }
  });
</script>
