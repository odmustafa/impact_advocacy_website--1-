
---
import { getLangFromUrl, useTranslations } from '../utils/i18n';
import LanguageToggle from './LanguageToggle.astro';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const isHomePage = Astro.url.pathname === '/' || Astro.url.pathname === '/es/';
---

<header class="fixed top-0 left-0 right-0 z-50 glass-card border-b border-white/10">
  <nav class="container-width px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={currentLang === 'es' ? '/es/' : '/'} class="flex items-center space-x-3 hover-lift">
        <img 
          src="/impactadvocacydfwlogo.png" 
          alt="Impact Advocacy Logo" 
          class="h-10 w-auto"
        />
        <span class="hidden sm:block text-xl font-bold gradient-text">
          Impact Advocacy
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a 
          href={currentLang === 'es' ? '/es/' : '/'}
          class={`text-sm font-medium transition-colors duration-300 hover:text-primary-400 ${isHomePage ? 'text-primary-400' : 'text-white'}`}
        >
          {t('nav.home')}
        </a>
        <a 
          href={currentLang === 'es' ? '/es/about' : '/about'}
          class="text-sm font-medium text-white transition-colors duration-300 hover:text-primary-400"
        >
          {t('nav.about')}
        </a>
        <a 
          href={currentLang === 'es' ? '/es/services' : '/services'}
          class="text-sm font-medium text-white transition-colors duration-300 hover:text-primary-400"
        >
          {t('nav.services')}
        </a>
        <a 
          href={currentLang === 'es' ? '/es/events' : '/events'}
          class="text-sm font-medium text-white transition-colors duration-300 hover:text-primary-400"
        >
          {t('nav.events')}
        </a>
        <a 
          href={currentLang === 'es' ? '/es/contact' : '/contact'}
          class="text-sm font-medium text-white transition-colors duration-300 hover:text-primary-400"
        >
          {t('nav.contact')}
        </a>
        
        <!-- Language Toggle -->
        <LanguageToggle />
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center space-x-4">
        <LanguageToggle />
        <button 
          type="button" 
          class="mobile-menu-button p-2 rounded-lg glass-card"
          aria-label="Toggle mobile menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div class="mobile-menu hidden md:hidden border-t border-white/10 pt-4 pb-4">
      <div class="space-y-4">
        <a 
          href={currentLang === 'es' ? '/es/' : '/'}
          class="block text-base font-medium text-white hover:text-primary-400 transition-colors duration-300"
        >
          {t('nav.home')}
        </a>
        <a 
          href={currentLang === 'es' ? '/es/about' : '/about'}
          class="block text-base font-medium text-white hover:text-primary-400 transition-colors duration-300"
        >
          {t('nav.about')}
        </a>
        <a 
          href={currentLang === 'es' ? '/es/services' : '/services'}
          class="block text-base font-medium text-white hover:text-primary-400 transition-colors duration-300"
        >
          {t('nav.services')}
        </a>
        <a 
          href={currentLang === 'es' ? '/es/events' : '/events'}
          class="block text-base font-medium text-white hover:text-primary-400 transition-colors duration-300"
        >
          {t('nav.events')}
        </a>
        <a 
          href={currentLang === 'es' ? '/es/contact' : '/contact'}
          class="block text-base font-medium text-white hover:text-primary-400 transition-colors duration-300"
        >
          {t('nav.contact')}
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
