
---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl } from '../utils/i18n';

const currentLang = getLangFromUrl(Astro.url);

const title = "Events";
const description = "Join Impact Advocacy's upcoming financial literacy workshops, community empowerment events, and educational programs serving Latino families in the Dallas-Fort Worth area.";

// Sample upcoming events
const upcomingEvents = [
  {
    title: "Dallas Small Business Week - 'Credit That Works' Workshop",
    date: "2025-02-15",
    time: "10:00 AM - 12:00 PM",
    location: "Dallas Community Center, Oak Cliff",
    description: "Learn practical credit repair strategies and small business financing options specifically designed for Latino entrepreneurs.",
    type: "Workshop",
    registrationLink: "/contact"
  },
  {
    title: "Fort Worth Latino Investment Fair - Generational Wealth Panel",
    date: "2025-02-22",
    time: "2:00 PM - 4:00 PM", 
    location: "Fort Worth Convention Center",
    description: "Discover investment strategies and wealth-building techniques that honor cultural values while securing your family's future.",
    type: "Panel Discussion",
    registrationLink: "/contact"
  },
  {
    title: "Irving Community Financial Literacy Workshop",
    date: "2025-03-08",
    time: "6:00 PM - 8:00 PM",
    location: "Irving Public Library - Heritage District",
    description: "Bilingual workshop covering budgeting, saving, and debt management for Latino families in Irving.",
    type: "Workshop",
    registrationLink: "/contact"
  }
];

// Sample past events
const pastEvents = [
  {
    title: "Univision Town Hall on Financial Literacy",
    date: "2024-11-15",
    location: "Univision Dallas Studios",
    description: "Featured discussion on financial empowerment for Latino communities, reaching over 50,000 viewers.",
    type: "Media Feature"
  },
  {
    title: "Telemundo 'Mujeres en Finanzas' Panel",
    date: "2024-10-22",
    location: "Telemundo Studios",
    description: "Women in finance panel highlighting Tessie Santiago's expertise in community financial education.",
    type: "TV Appearance"
  },
  {
    title: "Dallas Chamber Latino Business Summit",
    date: "2024-09-18",
    location: "Dallas Chamber of Commerce",
    description: "Strategic consulting presentation on marketing to underserved Latino communities in DFW.",
    type: "Summit"
  }
];
---

<BaseLayout title={title} description={description} lang={currentLang}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-900 via-dark-100 to-secondary-900"></div>
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-72 h-72 bg-primary-600/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-secondary-500/10 rounded-full blur-3xl animate-float" style="animation-delay: -1s;"></div>
      </div>
      
      <div class="relative z-10 container-width px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl lg:text-7xl font-bold text-white mb-6 animate-fade-up">
          Join the <span class="gradient-text">Movement</span>
        </h1>
        <p class="text-xl lg:text-2xl text-white/80 max-w-3xl mx-auto animate-fade-up" style="animation-delay: 0.2s;">
          Empowering Latino communities through education, advocacy, and action
        </p>
      </div>
    </section>

    <!-- Upcoming Events Section -->
    <section class="section-padding">
      <div class="container-width">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
            Upcoming <span class="gradient-text">Events</span>
          </h2>
          <p class="text-xl text-white/70">
            Don't miss these opportunities to grow and connect with your community
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8">
          {upcomingEvents.map((event, index) => (
            <div class="glass-card p-6 hover-lift animate-fade-up" style={`animation-delay: ${index * 0.1}s;`}>
              <!-- Event Type Badge -->
              <div class="inline-block px-3 py-1 bg-primary-600/20 text-primary-400 text-sm font-medium rounded-full mb-4">
                {event.type}
              </div>
              
              <!-- Event Title -->
              <h3 class="text-xl font-bold text-white mb-3 line-clamp-2">
                {event.title}
              </h3>
              
              <!-- Date and Time -->
              <div class="flex items-center text-white/70 mb-2">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span class="text-sm">
                  {new Date(event.date).toLocaleDateString('en-US', { 
                    weekday: 'long', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </span>
              </div>
              
              <!-- Time -->
              <div class="flex items-center text-white/70 mb-3">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-sm">{event.time}</span>
              </div>
              
              <!-- Location -->
              <div class="flex items-center text-white/70 mb-4">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span class="text-sm">{event.location}</span>
              </div>
              
              <!-- Description -->
              <p class="text-white/80 text-sm mb-6 leading-relaxed">
                {event.description}
              </p>
              
              <!-- Register Button -->
              <a 
                href={event.registrationLink}
                class="w-full inline-flex items-center justify-center px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-all duration-300 hover:scale-105"
              >
                Register Now
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Past Highlights Section -->
    <section class="section-padding bg-dark-100">
      <div class="container-width">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
            Past <span class="gradient-text">Highlights</span>
          </h2>
          <p class="text-xl text-white/70">
            Celebrating our impact and media recognition
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {pastEvents.map((event, index) => (
            <div class="glass-card p-6 hover-lift animate-fade-up" style={`animation-delay: ${index * 0.1}s;`}>
              <!-- Event Type Badge -->
              <div class="inline-block px-3 py-1 bg-secondary-600/20 text-secondary-400 text-sm font-medium rounded-full mb-4">
                {event.type}
              </div>
              
              <!-- Event Title -->
              <h3 class="text-lg font-bold text-white mb-3">
                {event.title}
              </h3>
              
              <!-- Date -->
              <div class="flex items-center text-white/70 mb-2">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span class="text-sm">
                  {new Date(event.date).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </span>
              </div>
              
              <!-- Location -->
              <div class="flex items-center text-white/70 mb-4">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span class="text-sm">{event.location}</span>
              </div>
              
              <!-- Description -->
              <p class="text-white/80 text-sm leading-relaxed">
                {event.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Get Involved Section -->
    <section class="section-padding">
      <div class="container-width">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl lg:text-5xl font-bold text-white mb-8">
            Get <span class="gradient-text">Involved</span>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Invite Us -->
            <div class="glass-card p-8">
              <div class="w-16 h-16 bg-primary-600/20 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-4">Invite Our Team</h3>
              <p class="text-white/70 mb-6">
                Host Impact Advocacy at your church, community center, or organization for a financial literacy workshop or speaking engagement.
              </p>
              <a 
                href="/contact"
                class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-all duration-300"
              >
                Request Speaking Event
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>

            <!-- Volunteer -->
            <div class="glass-card p-8">
              <div class="w-16 h-16 bg-secondary-600/20 rounded-full flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-white mb-4">Volunteer With Us</h3>
              <p class="text-white/70 mb-6">
                Join our mission to empower Latino families by volunteering at workshops, events, and community outreach programs.
              </p>
              <a 
                href="/contact"
                class="inline-flex items-center px-6 py-3 bg-secondary-600 hover:bg-secondary-700 text-white font-medium rounded-lg transition-all duration-300"
              >
                Become a Volunteer
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="section-padding bg-gradient-to-r from-primary-900 to-secondary-900">
      <div class="container-width">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
            Stay <span class="gradient-text">Connected</span>
          </h2>
          <p class="text-xl text-white/80 mb-8">
            Get notified about upcoming events, workshops, and financial literacy resources delivered to your inbox.
          </p>
          
          <!-- Newsletter Form -->
          <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-primary-400 focus:border-transparent"
              required
            />
            <button
              type="submit"
              class="px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-all duration-300 hover:scale-105"
            >
              Subscribe
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  import '../styles/global.css';
</script>
